---
import BaseLayout from "src/layouts/BaseLayout.astro";
import client from "@data/client.json";
---

<BaseLayout title="Contact" description={"Get in contact with " + client.name}>
  <section id="contact-page">
    <form class="flex flex-col" id="contact-form" name="contact" data-netlify="true" method="post">
      <div>
        <h2 id="Get in Touch">Get in Touch</h2>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ridiculus
          elementum ullamcorper ipsum porttitor aliquam. Id magna urna ultrices
          odio pulvinar. Sed ut.
        </p>
      </div>
      <label>
        Name
        <input required type="text" id="name" name="name" placeholder="Name" />
      </label>
      <label>
        Email
        <input
          required
          type="text"
          id="email"
          name="email"
          placeholder="Email"
        />
      </label>
      <label>
        Phone
        <input
          required
          type="text"
          id="phone"
          name="phone"
          placeholder="Phone"
        />
      </label>
      <label>
        Message
        <textarea
          required
          name="Message"
          id="message"
          placeholder="Write message..."></textarea>
      </label>
      <button class="button-gradient" type="submit">Submit Message</button>
    </form>
    <div>
      <!--Email-->
      <p>Email</p>
      <a href={`mailto:${client.email}`}>{client.email}</a>
      <!--Phone-->
      <p>Phone</p>
      <a href={`tel:${client.phoneForTel}`}
        >{client.phoneFormatted}</a
      >
    </div>
  </section>
</BaseLayout>